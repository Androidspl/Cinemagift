<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/homepage_bg"
            android:paddingBottom="12dp" >

            <ImageView
                android:id="@+id/left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="18dp"
                android:src="@drawable/ico_msgs" />

            <ImageView
                android:id="@+id/head_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="14dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/pic_morentouxiang" />

            <TextView
                android:id="@+id/nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/head_icon"
                android:layout_centerHorizontal="true"
                android:textColor="@color/mine_name_white"
                android:textSize="@dimen/text_17" />

            <LinearLayout
                android:id="@+id/design_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nick_name"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal" >
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/goods_fans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_background"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingTop="15dp" >

            <TextView
                android:id="@+id/goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/mine_hafe_black"
                android:textSize="@dimen/text_12"
                android:text="商品 43" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:background="@color/mine_hafe_black" />

            <TextView
                android:id="@+id/attentionNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="粉丝 269"
                android:textColor="@color/mine_hafe_black"
                android:textSize="@dimen/text_12" />
        </LinearLayout>

        <TextView
            android:id="@+id/wdzp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mine_item_bg"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="我的作品"
            android:textColor="@color/mine_hafe_black1"
            android:textSize="@dimen/text_12" />

        <LinearLayout
            android:id="@+id/my_works"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mine_item_bg"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/onsell"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/white_background"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/icon_myzaishou"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="在售商品"
                android:textColor="@color/mine_hafe_black1"
                android:textSize="@dimen/text_12" />

            <TextView
                android:id="@+id/crowd_funding"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/white_background"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/icon_zaizhongchou"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="众筹产品"
                android:textColor="@color/mine_hafe_black1"
                android:textSize="@dimen/text_12" />

            <TextView
                android:id="@+id/issue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white_background"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/icon_fabu"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="发布作品"
                android:textColor="@color/mine_hafe_black1"
                android:textSize="@dimen/text_12" />
        </LinearLayout>

        <TextView
            android:id="@+id/wddd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mine_item_bg"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="我的订单"
            android:textColor="@color/mine_hafe_black1"
            android:textSize="@dimen/text_12" />

        <LinearLayout
            android:id="@+id/my_orders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mine_item_bg"
            android:orientation="horizontal"
            android:weightSum="3" >

            <TextView
                android:id="@+id/my_order"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/white_background"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/icon_mydingdang"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="商品订单"
                android:textColor="@color/mine_hafe_black1"
                android:textSize="@dimen/text_12" />

            <TextView
                android:id="@+id/participantZC"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@color/white_background"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/icon_canyuzhongchou"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="参与的众筹"
                android:textColor="@color/mine_hafe_black1"
                android:textSize="@dimen/text_12" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white_background"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mine_line_gray" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/mine_item_bg" />

        <TextView
            android:id="@+id/my_fond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_background"
            android:drawableLeft="@drawable/icon_myxihuan"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:text="我的喜欢(12)"
            android:textColor="@color/mine_hafe_black1"
            android:textSize="@dimen/text_12" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mine_line_gray" />

        <TextView
            android:id="@+id/my_collection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_background"
            android:drawableLeft="@drawable/icon_myshoucang"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:text="我的收藏(12)"
            android:textColor="@color/mine_hafe_black1"
            android:textSize="@dimen/text_12" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mine_line_gray" />

        <TextView
            android:id="@+id/my_attention"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_background"
            android:drawableLeft="@drawable/icon_myguanzhu"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:text="我的关注(12)"
            android:textColor="@color/mine_hafe_black1"
            android:textSize="@dimen/text_12" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mine_line_gray" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/mine_item_bg" />

        <TextView
            android:id="@+id/become_stylist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_background"
            android:drawableLeft="@drawable/icon_beshejishi"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:text="成为设计师"
            android:textColor="@color/mine_hafe_black1"
            android:textSize="@dimen/text_12" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mine_line_gray" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/mine_item_bg" />

        <TextView
            android:id="@+id/address_manage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_background"
            android:drawableLeft="@drawable/icon_mydizhi"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:text="地址管理"
            android:textColor="@color/mine_hafe_black1"
            android:textSize="@dimen/text_12" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mine_line_gray" />

        <TextView
            android:id="@+id/customer_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_background"
            android:drawableLeft="@drawable/icon_mykefu"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:text="客服咨询"
            android:textColor="@color/mine_hafe_black1"
            android:textSize="@dimen/text_12" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mine_line_gray" />

        <TextView
            android:id="@+id/set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_background"
            android:drawableLeft="@drawable/icon_myshezhi"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:text="设置"
            android:textColor="@color/mine_hafe_black1"
            android:textSize="@dimen/text_12" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mine_line_gray" />

        <TextView
            android:id="@+id/channel_expand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_background"
            android:drawableLeft="@drawable/icon_qudao"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:text="渠道拓展"
            android:textColor="@color/mine_hafe_black1"
            android:textSize="@dimen/text_12" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mine_line_gray" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/mine_item_bg" />
    </LinearLayout>

</ScrollView>