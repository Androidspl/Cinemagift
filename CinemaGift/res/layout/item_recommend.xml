<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/line_grey"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/mine_item_bg" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/head_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="18dp"
            android:scaleType="fitXY"
            android:src="@drawable/mengdian1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/head_icon"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/head_icon"
                android:text="名字"
                android:textColor="@color/mine_title"
                android:textSize="@dimen/text_18" />

            <TextView
                android:id="@+id/identity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/icon_tag_h"
                android:drawablePadding="2dp"
                android:text="身份"
                android:textColor="@color/mine_title"
                android:textSize="@dimen/text_10" />

            <LinearLayout
                android:id="@+id/goods_fans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white_background"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/goods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="商品 43"
                    android:textColor="@color/mine_text_b3"
                    android:textSize="@dimen/text_10" />

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="8dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/mine_text_b3" />

                <TextView
                    android:id="@+id/fans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="粉丝 269"
                    android:textColor="@color/mine_text_b3"
                    android:textSize="@dimen/text_10" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img0"
            android:layout_width="0dp"
            android:layout_height="106dp"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="18dp"
            android:layout_weight="1"
            android:src="@drawable/mengdian1" />

        <ImageView
            android:id="@+id/img1"
            android:layout_width="0dp"
            android:layout_height="106dp"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="18dp"
            android:layout_weight="1"
            android:src="@drawable/mengdian1" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="0dp"
            android:layout_height="106dp"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="18dp"
            android:layout_weight="1"
            android:src="@drawable/mengdian1" />
    </LinearLayout>

</LinearLayout>