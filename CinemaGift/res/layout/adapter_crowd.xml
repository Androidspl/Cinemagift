<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/umeng_socialize_list_item_bgcolor"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp" >

        <ImageView
            android:id="@+id/crowd_img"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/grey_background"
            android:layout_marginLeft="@dimen/grey_line_color_12"
            android:layout_marginRight="@dimen/grey_line_color_12"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/crowdfunding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/grey_line_color_12"
            android:layout_marginRight="@dimen/grey_line_color_12"
            android:scaleType="fitXY"
            android:src="@drawable/icon_crowdfunding" />
    </RelativeLayout>

    <TextView
        android:id="@+id/crowd_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/grey_line_color_12"
        android:layout_marginRight="@dimen/grey_line_color_12"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="大圣玩偶"
        android:textColor="@color/store_price_text"
        android:textSize="@dimen/text_16" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/crowd_designer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/grey_line_color_12"
            android:layout_marginRight="@dimen/grey_line_color_12"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:drawableLeft="@drawable/icon_designer"
            android:drawablePadding="@dimen/home_radio_text_padding"
            android:text="icon设计师:"
            android:textColor="@color/store_price_text"
            android:textSize="@dimen/text_10"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/crowd_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:drawableLeft="@drawable/icon_brand"
            android:drawablePadding="@dimen/home_radio_text_padding"
            android:text="icon品牌:"
            android:textColor="@color/store_price_text"
            android:textSize="@dimen/text_10"
            android:visibility="invisible" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress"
        style="@style/StyleProgressBarMini"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_marginLeft="@dimen/grey_line_color_12"
        android:layout_marginRight="@dimen/grey_line_color_12"
        android:layout_marginTop="@dimen/grey_line_color_12"
        android:max="100"
        android:progress="30" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/grey_line_color_12"
        android:layout_marginRight="@dimen/grey_line_color_12"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/crowd_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grey_line_color_12"
                android:text="0"
                android:textColor="@color/store_price_text"
                android:textSize="@dimen/text_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/store_image_text"
                android:text="参与数"
                android:textColor="@color/grey_color3"
                android:textSize="@dimen/text_9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/home_notice_height"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/crowd_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grey_line_color_12"
                android:text=""
                android:textColor="@color/store_price_text"
                android:textSize="@dimen/text_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/store_image_text"
                android:text="完成度"
                android:textColor="@color/grey_color3"
                android:textSize="@dimen/text_9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/home_notice_height"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/crowd_residual_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/grey_line_color_12"
                android:text=""
                android:textColor="@color/store_price_text"
                android:textSize="@dimen/text_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/store_image_text"
                android:text="剩余天数"
                android:textColor="@color/grey_color3"
                android:textSize="@dimen/text_9" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/grey_line_color_10"
        android:layout_marginTop="@dimen/store_dispalyall"
        android:background="@color/umeng_socialize_ucenter_bg" />

</LinearLayout>