<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/mainBody"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rGroup" >
    </FrameLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/mainBody"
        android:background="@color/mine_line_b2" />

    <RadioGroup
        android:id="@+id/rGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/home_page"
            style="@style/foot_Radio"
            android:checked="true"
            android:drawableTop="@drawable/selector_button_h"
            android:text="首页" />

        <RadioButton
            android:id="@+id/store"
            style="@style/foot_Radio"
            android:drawableTop="@drawable/selector_button_s"
            android:text="商城" />

        <RadioButton
            android:id="@+id/crowd_funding"
            style="@style/foot_Radio"
            android:drawableTop="@drawable/selector_button_c"
            android:text="众筹" />

        <RadioButton
            android:id="@+id/mine"
            style="@style/foot_Radio"
            android:drawableTop="@drawable/selector_button_m"
            android:text="我的" />
    </RadioGroup>

</RelativeLayout>