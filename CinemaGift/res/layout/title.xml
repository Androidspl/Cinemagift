<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:id="@+id/rl_title"
    android:background="@color/title_bg" >

    <LinearLayout
        android:layout_width="@dimen/title_height"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/store_image_text"
        android:gravity="center" >

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="电影礼物"
        android:textColor="@color/title_text"
        android:textSize="@dimen/text_12" />

    <LinearLayout
        android:layout_width="@dimen/title_height"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/tv_right"
        android:gravity="center"
       >

        <ImageView
            android:id="@+id/iv_right1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tv_right"
        android:layout_width="@dimen/title_height"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/store_image_text"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/tv_right2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_right3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginRight="12dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/text_12"
        android:textColor="@color/mine_text_bc"
        android:visibility="gone"/>

</RelativeLayout>